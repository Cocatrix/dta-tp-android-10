<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_1" />

        <Button
            android:id="@+id/number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_2" />

        <Button
            android:id="@+id/number_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_3" />

        <Button
            android:id="@+id/operator_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_operator"
            android:text="@string/operator_add" />

        <Button
            android:id="@+id/number_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_4" />

        <Button
            android:id="@+id/number_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_5" />

        <Button
            android:id="@+id/number_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_6" />

        <Button
            android:id="@+id/operator_substract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_operator"
            android:text="@string/operator_substract" />

        <Button
            android:id="@+id/number_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_7" />

        <Button
            android:id="@+id/number_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_8" />

        <Button
            android:id="@+id/number_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_9" />

        <Button
            android:id="@+id/operator_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_operator"
            android:text="@string/operator_multiply" />

        <Button
            android:id="@+id/char_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_point"
            android:text="@string/char_point" />

        <Button
            android:id="@+id/number_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_0_to_9"
            android:text="@string/number_0" />

        <Button
            android:id="@+id/action_del_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_del"
            android:text="@string/action_del_one" />

        <Button
            android:id="@+id/operator_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_operator"
            android:text="@string/operator_divide" />

        <Button
            android:id="@+id/action_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_clear"
            android:text="@string/action_clear" />

        <Button
            android:id="@+id/action_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_pop"
            android:text="@string/action_pop" />

        <Button
            android:id="@+id/action_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_swap"
            android:text="@string/action_swap" />

        <Button
            android:id="@+id/action_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click_enter"
            android:text="@string/action_enter" />
    </GridLayout>

    <ImageView
        android:id="@+id/image_next_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/grid"
        app:srcCompat="@android:drawable/ic_media_next" />

    <ImageView
        android:id="@+id/image_next_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_next_4"
        android:layout_toEndOf="@+id/grid"
        app:srcCompat="@android:drawable/ic_media_next" />

    <ImageView
        android:id="@+id/image_next_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_next_3"
        android:layout_toEndOf="@+id/grid"
        app:srcCompat="@android:drawable/ic_media_next" />

    <TextView
        android:id="@+id/stack_number_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_next_3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_next_4" />

    <TextView
        android:id="@+id/stack_number_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_next_2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/image_next_4"
        android:layout_toEndOf="@+id/image_next_4" />

    <TextView
        android:id="@+id/stack_number_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_next_2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/image_next_3"
        android:layout_toEndOf="@+id/image_next_3" />

    <ImageView
        android:id="@+id/image_next_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_next_2"
        android:layout_toEndOf="@+id/grid"
        app:srcCompat="@android:drawable/ic_media_next" />

    <TextView
        android:id="@+id/stack_number_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_next_1"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/stack_number_2"
        android:layout_toEndOf="@+id/image_next_2" />

    <ImageButton
        android:id="@+id/image_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_next_1"
        android:layout_toEndOf="@+id/grid"
        android:onClick="click_enter"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <TextView
        android:id="@+id/current_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_current"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/stack_number_1"
        android:layout_toEndOf="@+id/image_current" />

</RelativeLayout>

